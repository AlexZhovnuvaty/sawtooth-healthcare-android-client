<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_rest_api_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="http://localhost:8040"
            android:maxLines="1"
            android:lines="1"/>

        <Button
            android:id="@+id/btn_set_rest_api"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set URL" />

        <Button
            android:id="@+id/btn_add_lab_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Pulse" />

        <Button
            android:id="@+id/btn_get_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get items" />

        <TextView
            android:id="@+id/text_view_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:text="Click Get Items Button" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>